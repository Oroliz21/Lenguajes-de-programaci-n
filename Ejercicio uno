#include <stdio.h>
#include <iostream>

int main()
{
    int edad;
    std::cout <<"Ingresa tu edad: ";
    std::cin >> edad;
    
    if (edad >17) {
        std::cout << "Eres mayor de edad" << std::endl;
    } else {
        std::cout << "Eres menor de edad" << std:: endl;
    }
    
    return 0;
}
